<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".activities.VideoCallComingActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ic_vc_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:src="@drawable/profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ic_vc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:text="name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ssssssssssssssssssssssssssssss"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_videocam_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_vc_image" />

    <TextView
        android:id="@+id/tvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In Coming Video Call"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ssssssssssssssssssssssssssssss" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ic_vc_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_red_light"
        android:src="@drawable/ic_baseline_call_end_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ic_vc_accept"
        app:layout_constraintTop_toBottomOf="@id/tvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvv" />

    <TextView
        android:id="@+id/tvsdsdss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decline"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@id/ic_vc_cancel"
        app:layout_constraintStart_toStartOf="@id/ic_vc_cancel"
        app:layout_constraintTop_toBottomOf="@id/ic_vc_cancel" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ic_vc_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_light"
        android:src="@drawable/ic_baseline_call_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ic_vc_cancel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvv" />

    <TextView
        android:id="@+id/tvsdsdsssss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@id/ic_vc_accept"
        app:layout_constraintStart_toStartOf="@id/ic_vc_accept"
        app:layout_constraintTop_toBottomOf="@id/ic_vc_accept" />

</androidx.constraintlayout.widget.ConstraintLayout>