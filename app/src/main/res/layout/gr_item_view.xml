<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:id="@+id/lv_sender"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="150dp"
        android:background="@drawable/receive_message_layout"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/sender_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="alijon"
            android:textColor="@color/purple_500"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/chat_sender_image_i"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_receiver_text_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="send med dddddddddddddddddddddddddddddddddssage"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sender_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="time:asda"
            android:textSize="10dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lv_receiver"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_sender"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/sender_message_layout"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/receiver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="alijon"
            android:textColor="@color/purple_500"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/chat_rec_image_i"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_reveiver_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="send medddddddddddddddddddddddddddddddddssage"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_receiver_tim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="time:asda"
            android:textSize="10sp" />
    </LinearLayout>


</RelativeLayout>